<style>
@import url('https://fonts.googleapis.com/css?family=PT+Sans|Roboto+Condensed&display=swap');
</style> 
<div class="container">
<div class="big-bg">
  <div class="row justify-content-center" style="margin: 0">
    <div class="card card-info">
      <h2 class="card-title">
        <a class="text-white" href="/">Построение кольцевых маршрутов</a>
      </h2>
      <div class="card-body">
        <div class="card-text text-white roboto-text">
          <p>✓ Специально для доставки еды!</p>
          <p>✓ До 10 точек маршрута</p>
          <p>✓ Персональная настройка</p>
          <p>✓ Оптимизация маршрута</p>
        </div>
      </div>
    </div>
  </div>
</div>
  <div class="row mt-5">
    <div class="">
      <div class="card text-white bg-primary mb-3 mt-5" style="width: 30rem">
        <div class="card-header">
          <h2 class="cad-title">Регистрация нового аккаунта</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: 'form-control'%>
            </div>
            
            <div class="field">
              <%= f.label :organisation_name, 'Название организации' %><br />
              <%= f.text_field :organisation_name, class: 'form-control'%>
            </div>

            <div class="field">
              <%= f.label :password, 'Пароль' %>
              <% if @minimum_password_length %>
              <em>(минимум <%= @minimum_password_length %> символов)</em>
              <% end %><br />
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, 'Подтверждение пароля' %><br />
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
            <div class="row justify-content-center">
              <%= f.submit "Регистрация", class: "btn btn-success mt-3" %>
            </div>
              
          <% end %>
        </div>
      </div>  
      <div>
        <%= link_to 'Уже зарегистрированы? Войдите', new_user_session_path%>
      </div>
    </div>
  </div>
</div>
