<div class="container" style="margin-top: 5rem">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="row mt-4">
    <div class="col-lg-6">
      <div class="card text-white bg-primary card-settings" >
        <div class="card-header">
          <h2 class="card-title">Редактирование аккаунта</h2>
        </div>
        <div class="card-body">
          <div class="card-text">


            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
            </div>

            <div class="field">
              <%= f.label :organisation_name, 'Название организации' %><br />
              <%= f.text_field :organisation_name, class: 'form-control'%>
            </div>

            <div class="field">
              <%= f.label :password, 'Новый пароль' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> символов минимум)</em>
              <% end %>
              <br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>

              <div class="field">
                <%= f.label :password_confirmation, 'Подтвердите новый пароль' %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :current_password, 'Текущий пароль' %> <br />
                <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card text-white bg-primary card-settings" >
        <div class="card-header">
          <h2 class="card-title">Перснальные настройки</h2>
        </div>
        <div class="card-body">
          <div class="card-text">

            <div class="field">
              <%= f.label :max_time, 'Максимальное время доставки' %><br />
              <%= f.text_field :max_time, class: 'form-control'%>
            </div>

            <div class="field">
              <%= f.label :location, 'Начальный/конечный пункт' %><br />
              <%= f.text_field :location, class: 'form-control'%>
            </div>
              
              <div class="row justify-content-center">
                <%= f.submit "Обновить информацию", class: 'btn btn-success mt-3' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
